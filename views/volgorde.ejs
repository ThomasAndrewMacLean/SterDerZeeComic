<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>SDZ | Volgorde</title>
    <link rel="icon" href="faviconSDZ.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="faviconSDZ.ico" type="image/x-icon" />
    <link rel="stylesheet" href="normalize.css">
    <link rel="stylesheet" href="skeleton.css">

    <link rel="stylesheet" href="main.css">
    <link rel="stylesheet" href="volgorde.css">
</head>

<body>
    <main>
        <% include ./partials/navbar %>

        <h1 class="admin-header">Volgorde.</h1>

        <hr>
        <p class="small-margin">Versleep de afbeeldingen om de volgorde aan te passen.</p>

        <button id="saveBtn" class="button small-margin">Save</button>
        <div id="cardList">
            <% images.forEach(img => { %>


            <div class="card" draggable="true" id="<%=img._id %>" ondrop="drop_handler(event)" ondragleave="dragleave_handler(event)"
                ondragover="dragover_handler(event);" ondragstart="ondrag_handler(event)">
                <img height="150" src="<%=img.url %>" />
                <div>
                    <%= img.name%>
                </div>
                <div>
                    <%= img.description%>
                </div>
                <button id="del-<%=img._id %>" onclick="delete_handler(event)" class="button">verwijder ðŸ—‘</button>
            </div>




            <% }) %>
        </div>

    </main>
    <% include ./partials/footer %>

    <script src="volgorde.js"></script>

</body>

</html>